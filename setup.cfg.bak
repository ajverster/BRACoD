[metadata]
name = BRACoD
version = 0.1
author = Adrian Verster
author_email = adrian.verster@canada.ca
description = BRACoD is a method to identify associations between bacteria and physiological variables in Microbiome data
long_description = file: README.md
long_description_content_type = text/markdown
url = https://github.com/ajverster/BRACoD
project_urls =
    Bug Tracker = https://github.com/ajverster/BRACoD/issues
classifiers =
    Programming Language :: Python :: 3
    License :: OSI Approved :: MIT License
    Operating System :: OS Independent

[options]
package_dir =
    = src
packages = find:
python_requires = >=3.6

[options.packages.find]
where = src
